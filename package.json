  "bugs": {
    "url": "https://github.com/itzaks/harp-browser-sync-browserify/issues"
  },
  "homepage": "https://github.com/itzaks/harp-browser-sync-browserify",
  "dependencies": {
    "browser-sync": "^1.3.7",
    "coffeeify": "^0.7.0",
    "jquery": "^2.1.1"
  },
  "devDependencies": {
    "harp": "^0.13.0",
    "watchify": "^1.0.2"
  }
}
