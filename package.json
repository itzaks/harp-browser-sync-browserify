{
  "name": "harp-browser-sync-browserify",
  "version": "0.0.1",
  "description": "A harp boilerplate with browserify and browser-sync",
  "main": "app.js",
  "scripts": {
    "postinstall": "mkdir public/build",
    "start": "harp server public & watchify -t coffeeify app/index.coffee -o public/app.js -dv & browser-sync start --config bs-config.js",
